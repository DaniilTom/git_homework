<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/style.css">
    @*<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>*@
    @*<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">*@
    <link rel="stylesheet" href="~/font-awesome/css/all.min.css" />
    <link rel=" stylesheet" href="~/bootstrap/dist/css/bootstrap.min.css" />

    <script src="~/js/jquery/jquery.js"></script>

    <title>@ViewBag.Title</title>
</head>
<body>

    @await Html.PartialAsync("Partial/_Header")

    @await Html.PartialAsync("Partial/_Navigation")

    @await Component.InvokeAsync("BreadCrumbs")

    <hr />
    <p>BreadCrumbs by SmartBreacrumbs:</p>
    <breadcrumb></breadcrumb>
    <hr />

    @RenderBody()

    @await Html.PartialAsync("Partial/_Footer")

    @await RenderSectionAsync("Scripts", false)
    
    <script src="~/js/Cart/CartLogic.js"></script>

    <script>
        $(function () {
            Cart.init({
                addToCartLink: "@Url.Action("AddToCartAJAX","Cart")",
                decrementFromCartLink: "@Url.Action("DecrementFromCartAJAX", "Cart")",
                removeFromCartLink: "@Url.Action("RemoveFromCartAJAX", "Cart")"
            });
        });
    </script>
</body>
</html>

