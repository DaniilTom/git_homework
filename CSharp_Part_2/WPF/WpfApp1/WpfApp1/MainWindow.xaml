<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid VerticalAlignment="Stretch">
        <ListView x:Name="listView" HorizontalAlignment="Stretch" VerticalAlignment="Top"
                  ItemsSource="{Binding}" Height="308">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding FullName}"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Department.FullName}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Height="64" VerticalAlignment="Bottom" Content="Редактировать" Width="792" Click="Button_Click"/>
    </Grid>
</Window>
