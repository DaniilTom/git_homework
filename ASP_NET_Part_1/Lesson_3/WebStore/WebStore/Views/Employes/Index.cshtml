@model IEnumerable<WebStore.Models.Employee>
@{ 
    Layout = "_Layout";
}

<h3>Сотрудники</h3>

<a asp-controller="Employes" asp-action="Edit" class="btn btn-default">Создать</a>

<hr />

<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th></th>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Возраст</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Id</td>
                <td><a asp-controller="Employes" asp-action="Edit" asp-route-id="@emp.Id"><i class="fa fa-edit"></i></a></td>
                <td>@emp.SurName</td>
                <td>@emp.FirstName</td>
                <td>@emp.Patronymic</td>
                <td>@emp.Age</td>
                <td><a asp-action="Details" asp-route-id="@emp.Id">Детали</a></td>
                <td><a asp-action="Dossier" asp-route-id="@emp.Id">Досье</a></td>
                <td><a asp-action="Delete" asp-route-id="@emp.Id"><i class="fa fa-times text-danger"></i></a></td>
            </tr>
        }
    </tbody>
</table>