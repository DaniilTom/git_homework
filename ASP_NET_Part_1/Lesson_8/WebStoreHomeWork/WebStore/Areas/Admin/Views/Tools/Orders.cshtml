@model IEnumerable<WebStore.Domain.Implementations.Order>
@{
    ViewData["Title"] = "Orders";
}

<h3>Orders</h3>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>User Name</th>
            <th>Contact</th>
            <th>Products</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.UserName</td>
                <td>@order.Contact</td>
                <td>
                    <table>
                        @foreach (var item in order.Items)
                        {
                            <tr>
                                <td>@item.Product.Name</td>
                                <td>@item.Quantity</td>
                            </tr>
                        }
                    </table>
                </td>
            </tr>
        }
    </tbody>
</table>

